<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/double_margin"
    android:layout_marginRight="@dimen/double_margin"
    android:orientation="vertical"
    tools:context="com.android.breastcancerdiagnosis.PatientFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/triple_margin"
        android:layout_marginLeft="@dimen/divider_margin"
        android:text="Notificaciones"
        android:textColor="@color/primary_text"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/divider_margin"
        android:layout_marginRight="@dimen/divider_margin"
        android:background="@color/secondary_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/triple_margin"
        android:layout_marginLeft="@dimen/divider_margin"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/triple_margin"
            android:text="Recibir Notificaciones"
            android:layout_gravity="center"/>

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="No"
            android:textOn="Si" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/divider_margin"
        android:text="Social"
        android:textColor="@color/primary_text"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/divider_margin"
        android:layout_marginRight="@dimen/divider_margin"
        android:background="@color/secondary_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/triple_margin"
        android:layout_marginLeft="@dimen/divider_margin"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/facebook_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/triple_margin"
            android:layout_gravity="center"/>
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/link_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_borderColor="@color/primary_text"
            fancy:fb_borderWidth="1dp"
            fancy:fb_focusColor="@color/secondary_text"
            fancy:fb_iconPosition="left"
            fancy:fb_ghost="true"
            fancy:fb_text="Enlazar"
            fancy:fb_textColor="@color/primary_text"
            fancy:fb_radius="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/triple_margin"
        android:layout_marginLeft="@dimen/divider_margin"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/google_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/triple_margin"
            android:layout_gravity="center"/>
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/link_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_borderColor="@color/primary_text"
            fancy:fb_borderWidth="1dp"
            fancy:fb_focusColor="@color/secondary_text"
            fancy:fb_iconPosition="left"
            fancy:fb_ghost="true"
            fancy:fb_text="Enlazar"
            fancy:fb_textColor="@color/primary_text"
            fancy:fb_radius="10dp"/>
    </LinearLayout>

</LinearLayout>
