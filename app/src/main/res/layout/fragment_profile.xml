<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/double_margin"
    android:paddingRight="@dimen/double_margin"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.android.breastcancerdiagnosis.PatientFragment">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:civ_border_color="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        app:civ_border_width="2dp"
        android:layout_gravity="center"
        app:civ_shadow_color="@color/colorAccent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/verifiedUser"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/textVerified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/double_margin"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:text="Cuenta verificada"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Geovani Missael Mendoza Huanca"/>
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnUpdateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            fancy:fb_borderColor="@color/primary_text"
            fancy:fb_borderWidth="0dp"
            fancy:fb_focusColor="@color/secondary_text"
            fancy:fb_iconPosition="left"
            fancy:fb_ghost="true"
            fancy:fb_text=""
            fancy:fb_radius="25dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/divider_margin"
        android:layout_marginRight="@dimen/divider_margin"
        android:background="@color/secondary_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="mygvs.mh@gmail.com"/>
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnUpdateEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            fancy:fb_borderColor="@color/primary_text"
            fancy:fb_borderWidth="0dp"
            fancy:fb_focusColor="@color/secondary_text"
            fancy:fb_iconPosition="left"
            fancy:fb_ghost="true"
            fancy:fb_text=""
            fancy:fb_radius="25dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/divider_margin"
        android:layout_marginRight="@dimen/divider_margin"
        android:background="@color/secondary_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textEstablishment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Laboratorios La Paz"/>
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnUpdateEstablishment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            fancy:fb_borderColor="@color/primary_text"
            fancy:fb_borderWidth="0dp"
            fancy:fb_focusColor="@color/secondary_text"
            fancy:fb_iconPosition="left"
            fancy:fb_ghost="true"
            fancy:fb_text=""
            fancy:fb_radius="25dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/divider_margin"
        android:layout_marginRight="@dimen/divider_margin"
        android:background="@color/secondary_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/linkedinIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/triple_margin"/>
        <TextView
            android:id="@+id/textLinkedin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="hypersaiph"/>
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnUpdateLinkedin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            fancy:fb_borderColor="@color/primary_text"
            fancy:fb_borderWidth="0dp"
            fancy:fb_focusColor="@color/secondary_text"
            fancy:fb_iconPosition="left"
            fancy:fb_ghost="true"
            fancy:fb_text=""
            fancy:fb_radius="25dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/divider_margin"
        android:layout_marginRight="@dimen/divider_margin"
        android:background="@color/secondary_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:gravity="center"
        android:orientation="horizontal">
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_borderColor="@color/primary_text"
            fancy:fb_borderWidth="0dp"
            fancy:fb_focusColor="@color/secondary_text"
            fancy:fb_iconPosition="left"
            fancy:fb_ghost="true"
            fancy:fb_text="Cerrar sesiÃ³n"
            fancy:fb_textColor="@color/primary_text"
            fancy:fb_radius="20dp"/>
    </LinearLayout>
</LinearLayout>
